---
import "../styles/hex-container.css"

interface Props {
  src: string;
  alt: string;
  size?: number;
}

const { src, alt, size = 200 } = Astro.props;

const hexagonHeight = size * (2 / Math.sqrt(3));
---
<div class="hexagon"
  style={{
    width: `${size}px`,
    height: `${hexagonHeight}px`,
  }}
>
  <img src={src} alt={alt} />
</div>
